        <f:SimpleForm id="SimpleFormChange354"
			minWidth="1024"
			maxContainerCols="2"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Address"
			labelSpanL="3"
			labelSpanM="3"
			emptySpanL="4"
			emptySpanM="4"
			columnsL="1"
			columnsM="1"
			class="editableForm">
            <f:content>
				<Label id="lb_PersName" required="false" text="{i18n>PERS_NAME}"/>
				<Input id="input_PersName" value="{mainModel>/name}" width="300px" showValueHelp="false"/>
                <Input value="{mainModel>/surName}" placeholder="{i18n>PERS_SURNAME}">
					<layoutData>
						<l:GridData span="L2 M2 S4" />
					</layoutData>
				</Input>
				<Label text="{i18n>CITY}" />
				<Select width="100%">
					<items>
						<core:Item text="İstanbul" />
						<core:Item text="Ankara" />
						<core:Item text="İzmir" />
					</items>
				</Select>
                <Label text="Cinsiyet"/>
                <HBox>
                    <RadioButton groupName="GroupA" text="{i18n>}" selected="true"/>
                    <RadioButton groupName="GroupA" text="Kadın" />
                </HBox>
                <Label text=""/>
                <CheckBox text="{i18n>MESSAGE_INFO}"/>

			</f:content>
        </f:SimpleForm>
